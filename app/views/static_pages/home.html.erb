<body id="background-image">
  <div class="center jumbotron">
    <h1>Welcome to the Course Catalog</h1>

    <% if logged_in? %>
    <p> What do you want to see today? </p>
    <%= link_to "Course", courses_path, class: "btn btn-lg btn-primary" %>
    <%= link_to "Instructors", instructors_path, class: "btn btn-lg btn-primary" %>
    <%= link_to "Subjects", subjects_path, class: "btn btn-lg btn-primary" %>
    <% else %>
    <p>
      <%= link_to "Log In", login_path %> now to enroll in courses!
      Don't have an account? <%= link_to "Sign up now!", signup_path %>
    </p>
    <p> To see a list of courses, click <%= link_to "here", courses_path %>.</p>

    <%= link_to "Sign up now", signup_path, class: "btn btn-lg btn-primary" %>
    <%= link_to "Log In", login_path, class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</body>
